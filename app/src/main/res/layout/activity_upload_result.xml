<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadResultActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:gravity="center|top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_round"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_margin="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:textSize="20dp"
                android:text="Your recycle request has been successfully submitted."/>
            <TextView
                android:id="@+id/textImageUrl"
                android:autoLink="web"
                android:linksClickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:textSize="20dp"
                android:text="Image Url"/>
            <TextView
                android:id="@+id/textImageId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:textSize="20dp"
                android:text="Image Id"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnGoToDashboard"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Go to Dashboard"
            android:textAllCaps="false"
            android:background="@drawable/button_round"
            android:layout_margin="@dimen/activity_horizontal_margin"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>